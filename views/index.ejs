<!DOCTYPE html>
<html>
<head>
  <title>Book List</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Books</h1>
    <a class="btn" href="/add">Add New Book</a>
    <table>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Published On</th>
        <th>Genre</th>
        <th>Rating</th>
        <th>Actions</th>
      </tr>
      <% books.forEach(book => { %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.published_on.toDateString() %></td>
          <td><%= book.genre %></td>
          <td><%= book.rating %></td>
          <td>
            <a class="btn" href="/edit/<%= book.id %>">Edit</a>
            <a class="btn btn-danger" href="/delete/<%= book.id %>">Delete</a>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>
</body>
</html>
